<div class="row">
    <form class="col s12" action="/edit/{{ task.id }}" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="input-field col s12">
                <label for="title">Заголовок</label>
                <input id="title" name="title" type="text" class="validate" value="{{ task.title }}" required>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="title">Описание</label>
                <input id="description" name="description" type="text" class="validate" value="{{ task.description }}"
                    required>
            </div>
        </div>
        <div class="file-field input-field">
            <div class="btn">
                <span>Картинка</span>
                <input name="filedata" type="file">
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text" value="{{ task.file_path }}">
            </div>
        </div>
        <div class="row">
            <button type="submit" class="waves-effect waves-light btn">Сохранить</button>
        </div>
    </form>
    <div class="card-image">
        <img src="/{{ task.file_path}}">
    </div>
</div>